config BACKPORT_DVB_USB_AZ6007
	tristate "AzureWave 6007 and clones DVB-T/C USB2.0 support"
	depends on !DVB_USB_AZ6007
	depends on BACKPORT_DVB_USB_V2
	select BACKPORT_CYPRESS_FIRMWARE
	select DVB_DRXK if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MT2063 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the AZ6007 receivers like Terratec H7.

