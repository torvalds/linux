	select DVB_IX2505V if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0299 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_PLL if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_M88RS2000 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TS2020 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the LME DM04/QQBOX DVB-S USB2.0

config BACKPORT_DVB_USB_MXL111SF
	tristate "MxL111SF DTV USB2.0 support"
	depends on !DVB_USB_MXL111SF
	depends on BACKPORT_DVB_USB_V2
	select DVB_LGDT3305 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_LG2160 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select BACKPORT_VIDEO_TVEEPROM
	help
	  Say Y here to support the MxL111SF USB2.0 DTV receiver.

config BACKPORT_DVB_USB_RTL28XXU
	tristate "Realtek RTL28xxU DVB USB support"
	depends on !DVB_USB_RTL28XXU
	depends on BACKPORT_DVB_USB_V2 && I2C_MUX
	select BACKPORT_DVB_RTL2830
	select BACKPORT_DVB_RTL2832
	select DVB_RTL2832_SDR if (MEDIA_SUBDRV_AUTOSELECT && BACKPORT_MEDIA_SDR_SUPPORT)
	select MEDIA_TUNER_QT1010 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MT2060 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MXL5005S if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_FC0012 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_FC0013 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_E4000 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_FC2580 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_R820T if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the Realtek RTL28xxU DVB USB receiver.

config BACKPORT_DVB_USB_DVBSKY
	tristate "DVBSky USB support"
	depends on !DVB_USB_DVBSKY
	depends on BACKPORT_DVB_USB_V2
	select DVB_M88DS3103 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_SI2168 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_M88TS2022 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_SI2157 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_SP2 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the USB receivers from DVBSky.
