config BACKPORT_DVB_USB_V2
	tristate "Support for various USB DVB devices v2"
	depends on !DVB_USB_V2
	depends on BACKPORT_DVB_CORE && USB && I2C && (RC_CORE || RC_CORE=n)
	help
	  By enabling this you will be able to choose the various supported
	  USB1.1 and USB2.0 DVB devices.

	  Almost every USB device needs a firmware, please look into
	  <file:Documentation/dvb/README.dvb-usb>.

	  For a complete list of supported USB devices see the LinuxTV DVB Wiki:
	  <http://www.linuxtv.org/wiki/index.php/DVB_USB>

	  Say Y if you own a USB DVB device.

config BACKPORT_DVB_USB_AF9015
	tristate "Afatech AF9015 DVB-T USB2.0 support"
	depends on !DVB_USB_AF9015
	depends on BACKPORT_DVB_USB_V2
	select BACKPORT_DVB_AF9013
	select DVB_PLL              if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MT2060   if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_QT1010   if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA18271 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MXL5005S if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MC44S803 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA18218 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MXL5007T if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the Afatech AF9015 based DVB-T USB2.0 receiver

config BACKPORT_DVB_USB_AF9035
	tristate "Afatech AF9035 DVB-T USB2.0 support"
	depends on !DVB_USB_AF9035
	depends on BACKPORT_DVB_USB_V2
	select BACKPORT_DVB_AF9033
	select MEDIA_TUNER_TUA9001 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_FC0011 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_MXL5007T if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA18218 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_FC2580 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_IT913X if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the Afatech AF9035 based DVB USB receiver.

config BACKPORT_DVB_USB_ANYSEE
	tristate "Anysee DVB-T/C USB2.0 support"
	depends on !DVB_USB_ANYSEE
	depends on BACKPORT_DVB_USB_V2
	select DVB_PLL if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_MT352 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_ZL10353 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_TDA10023 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select MEDIA_TUNER_TDA18212 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CX24116 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV0900 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_STV6110 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_ISL6423 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CXD2820R if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y here to support the Anysee E30, Anysee E30 Plus or
	  Anysee E30 C Plus DVB USB2.0 receiver.

config BACKPORT_DVB_USB_AU6610
	tristate "Alcor Micro AU6610 USB2.0 support"
	depends on !DVB_USB_AU6610
