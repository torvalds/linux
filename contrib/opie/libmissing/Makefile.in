OBJS=bogus.o @MISSING@

CC=@CC@
CFLAGS=$(CFL) -I.. -I.
TARGET=libmissing.a

all: $(TARGET)

$(TARGET): $(OBJS)
	@AR@ @ARFLAGS@ $(TARGET) $(OBJS)
	@RANLIB@ $(TARGET)

clean:
	-rm -f $(OBJS) $(TARGET)

realclean: distclean

distclean: clean
	-rm -f *~ core* "\#*\#" *.o *.a Makefile
