OPENCLEXT_INTERNAL(cl_khr_d3d10_sharing, 110, ~0U)

// EMBEDDED_PROFILE
OPENCLEXT_INTERNAL(cles_khr_int64, 110, ~0U)

// OpenCL 1.2.
