# $FreeBSD$

e= q='?' a='*' t=texttext s='ast*que?non' p='/et[c]/' w='a b c' b='{{(#)}}'
h='##'
failures=''
ok=''

testcase() {
	code="$1"
	expected="$2"
	oIFS="$IFS"
	eval "$code"
	IFS='|'
	result="$#|$*"
	IFS="$oIFS"
	if [ "x$result" = "x$expected" ]; then
		ok=x$ok
	else
		failures=x$failures
		echo "For $code, expected $expected actual $result"
	fi
}

testcase 'set -- "${b%'\'}\''}"'		'1|{{(#)}'
testcase 'set -- ${b%"}"}'			'1|{{(#)}'
testcase 'set -- "${b%"}"}"'			'1|{{(#)}'

test "x$failures" = x
