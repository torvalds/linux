    "//llvm/lib/Support",
    "//llvm/lib/Target:TargetsToBuild",
    "//llvm/lib/TargetParser",
  ]
  include_dirs = [
    ".",
    "//libunwind/include",
  ]
  sources = [
    "Arch/ARM64.cpp",
    "Arch/ARM64Common.cpp",
    "Arch/ARM64_32.cpp",
    "Arch/X86_64.cpp",
    "ConcatOutputSection.cpp",
    "Driver.cpp",
    "DriverUtils.cpp",
    "Dwarf.cpp",
    "EhFrame.cpp",
    "ExportTrie.cpp",
    "ICF.cpp",
    "InputFiles.cpp",
    "InputSection.cpp",
    "LTO.cpp",
    "MapFile.cpp",
    "MarkLive.cpp",
    "ObjC.cpp",
    "OutputSection.cpp",
