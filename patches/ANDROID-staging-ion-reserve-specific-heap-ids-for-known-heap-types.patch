+	ION_HEAP_SYSTEM = (1 << ION_HEAP_TYPE_SYSTEM),
+	ION_HEAP_SYSTEM_CONTIG = (ION_HEAP_SYSTEM << 1),
+	ION_HEAP_CHUNK = (ION_HEAP_SYSTEM_CONTIG << 1),
