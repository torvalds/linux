config A
	bool "A"
	default y

config A0
	bool "A0"
	depends on A
	default y
	help
	  This depends on A, so should be a submenu of A.

config A0_0
	bool "A1_0"
	depends on A0
	help
	  Submenus are created recursively.
	  This should be a submenu of A0.

config A1
	bool "A1"
	depends on A
	default y
	help
	  This should line up with A0.

choice
	prompt "choice"
	depends on A1
	help
	  Choice should become a submenu as well.

config A1_0
	bool "A1_0"

config A1_1
	bool "A1_1"

endchoice

config B
	bool "B"
	help
	  This is independent of A.

config C
	bool "C"
	depends on A
	help
	  This depends on A, but not a consecutive item, so can/should not
	  be a submenu.
