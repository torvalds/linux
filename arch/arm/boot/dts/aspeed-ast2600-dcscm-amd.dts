/dts-v1/;

#include "aspeed-ast2600-evb.dts"

/ {
	model = "AST2600 DC-SCM AMD";
};

&fmc {
	fmc-spi-user-mode;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_fwqspi_default>;
	timing-calibration-disabled;
	status = "okay";
	num-cs = <1>;

	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "bmc";
		spi-max-frequency = <12500000>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			/delete-node/ u-boot-env@e0000;
			/delete-node/ kernel@100000;
			/delete-node/ rofs@a00000;
			/delete-node/ rwfs@2e00000;

			pfm@e0000 {
				reg = <0xe0000 0x20000>; // 128KB
				label = "pfm";
			};

			u-boot-env@100000 {
				reg = <0x100000 0x20000>; // 128KB
				label = "u-boot-env";
			};

			rwfs@120000 {
				reg = <0x120000 0xfe0000>; // 16256KB
				label = "rwfs";
			};

			kernel@1100000 {
				reg = <0x1100000 0x900000>; // 9216KB
				label = "kernel";
			};

			rofs@1a00000 {
				reg = <0x1a00000 0x2400000>; // 36864KB
				label = "rofs";
			};

			reserved-1@3e00000 {
				reg = <0x3e00000 0x200000>; // 2048KB
				label = "reserved-1";
			};

			rc-image@4000000 {
				reg = <0x4000000 0x4000000>; // 65536KB
				label = "rc-image";
			};

			image-stg@8000000 {
				reg = <0x8000000 0x4000000>; // 65536KB
				label = "img-stg";
			};

			pch-stg@c000000 {
				reg = <0xc000000 0x2000000>; // 32768KB
				label = "pch-stg";
			};

			pfr-stg@e000000 {
				reg = <0xe000000 0x100000>; // 1024KB
				label = "pfr-stg";
			};

			cpld-stg@e100000 {
				reg = <0xe100000 0x400000>; // 4096KB
				label = "cpld-stg";
			};

			reserved-2@e500000 {
				reg = <0xe500000 0x1b00000>; // 27648KB
				label = "reserved-2";
			};
		};
	};

	flash@1 {
		status = "disabled";
		m25p,fast-read;
		label = "fmc0:1";
		spi-max-frequency = <12500000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <1>;
	};

	flash@2 {
		status = "disabled";
		m25p,fast-read;
		label = "fmc0:2";
		spi-max-frequency = <12500000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <1>;
	};
};

