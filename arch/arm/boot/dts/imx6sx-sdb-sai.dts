#include "imx6sx-sdb.dts"

/ {
	sound {
		cpu-dai = <&sai1>;
	};
};

&audmux {
	/* pin conflict with sai */
	status = "disabled";
};

&sai1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_sai1>;
	status = "okay";
};

&sdma {
	gpr = <&gpr>;
	/* SDMA event remap for SAI1 */
	fsl,sdma-event-remap = <0 15 1>, <0 16 1>;
};
