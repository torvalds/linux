&i2c3 {
	status = "okay";

	i2c-mux@70 {
		compatible = "nxp,pca9543";
		reg = <0x70>;
		#address-cells = <1>;
		#size-cells = <0>;

		imux20: i2c@0 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0>;
			//Retimer Flash
			eeprom@50 {
				compatible = "atmel,24c2048";
				reg = <0x50>;
				pagesize = <128>;
			};
		};
		imux21: i2c@1 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <1>;
			retimer@24 {
				compatible = "asteralabs,pt5161l";
				reg = <0x24>;
			};
		};
	};
};

