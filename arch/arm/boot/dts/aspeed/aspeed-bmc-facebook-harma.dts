&i2c13 {
	status = "okay";

	i2c-mux@70 {
		compatible = "nxp,pca9545";
		reg = <0x70>;
		#address-cells = <1>;
		#size-cells = <0>;

		imux28: i2c@0 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0>;
			power-sensor@20 {
				compatible = "mps,mp5990";
				reg = <0x20>;
			};
			power-monitor@61 {
				compatible = "isil,isl69260";
				reg = <0x61>;
			};
			power-monitor@62 {
				compatible = "isil,isl69260";
				reg = <0x62>;
			};
			power-monitor@63 {
				compatible = "isil,isl69260";
				reg = <0x63>;
			};
			power-monitor@64 {
				compatible = "infineon,xdpe152c4";
				reg = <0x64>;
			};
			power-monitor@66 {
				compatible = "infineon,xdpe152c4";
				reg = <0x66>;
			};
			power-monitor@68 {
				compatible = "infineon,xdpe152c4";
				reg = <0x68>;
			};
		};
		imux29: i2c@1 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <1>;
			//MB FRU
			eeprom@54 {
				compatible = "atmel,24c64";
				reg = <0x54>;
			};

			adc@1d {
				compatible = "ti,adc128d818";
				reg = <0x1d>;
				ti,mode = /bits/ 8 <1>;
			};

			adc@1f {
				compatible = "ti,adc128d818";
				reg = <0x1f>;
				ti,mode = /bits/ 8 <1>;
			};

		};
		imux30: i2c@2 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <2>;
		};
		imux31: i2c@3 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <3>;

			rtc@51 {
				compatible = "nxp,pcf8563";
				reg = <0x51>;
			};
		};
	};
};

