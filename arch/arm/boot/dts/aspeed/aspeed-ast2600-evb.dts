	imx3102_1: i3cmux@f,4cc31020000 {
		reg = <0xf 0x4cc 0x31020000>;
		assigned-address = <0xf>;
		dcr = /bits/ 8 <0xd1>;
		bcr = /bits/ 8 <0x6>;
	};

	JESD300_SPD_I3C_MODE(1, 0, 50);
	JESD300_SPD_I3C_MODE(1, 1, 51);
};

&i3c2 {
