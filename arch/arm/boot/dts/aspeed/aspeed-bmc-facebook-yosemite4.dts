	status = "okay";
	mctp-controller;
	bus-frequency = <400000>;
	multi-master;

	mctp@10 {
		compatible = "mctp-i2c-controller";
		reg = <(0x10 | I2C_OWN_SLAVE_ADDRESS)>;
	};

	power-sensor@40 {
		compatible = "adi,adm1278";
		reg = <0x40>;
	};
};

