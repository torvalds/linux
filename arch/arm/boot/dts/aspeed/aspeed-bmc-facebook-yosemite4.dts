				reg = <0x22>;
			};

			pwm@23{
				compatible = "max31790";
				reg = <0x23>;
				#address-cells = <1>;
				#size-cells = <0>;
			};

			adc@33 {
				compatible = "maxim,max11615";
				reg = <0x33>;
			};

			eeprom@52 {
				compatible = "atmel,24c128";
				reg = <0x52>;
			};

			gpio@61 {
				compatible = "nxp,pca9552";
				reg = <0x61>;
				#address-cells = <1>;
				#size-cells = <0>;
				gpio-controller;
				#gpio-cells = <2>;
			};
		};
	};

	i2c-mux@73 {
		compatible = "nxp,pca9544";
		#address-cells = <1>;
		#size-cells = <0>;

		idle-state = <0>;
		i2c-mux-idle-disconnect;
