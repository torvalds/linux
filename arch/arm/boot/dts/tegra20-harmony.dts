				0x0C030004	/* KEY_3 */
				0x0C040003	/* KEY_2 */
				0x0C050067	/* KEY_UP */
				0x0C0600D2	/* KEY_PRINT */
				0x0C070077	/* KEY_PAUSE */
				0x0D00006E	/* KEY_INSERT */
				0x0D01006F	/* KEY_DELETE */
				0x0D030068	/* KEY_PAGEUP */
				0x0D04006D	/* KEY_PAGEDOWN */
