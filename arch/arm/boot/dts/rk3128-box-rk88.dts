&gmac_clkin {
	clock-frequency = <50000000>;
};
&gmac {
	//pmu_regulator = "act_ldo5";
	//pmu_enable_level = <1>; //1->HIGH, 0->LOW
	//power-gpio = <&gpio0 GPIO_A6 GPIO_ACTIVE_HIGH>;
	reset-gpio = <&gpio2 GPIO_D0 GPIO_ACTIVE_LOW>;
	phy-mode = "rmii";
	clock_in_out = "output";
	tx_delay = <0x30>;
	rx_delay = <0x10>;
};

&codec {
	spk_ctl_io = <&gpio1 GPIO_A3 GPIO_ACTIVE_HIGH>;
	spk-mute-delay = <200>;
	hp-mute-delay = <100>;
	rk312x_for_mid = <0>;
	is_rk3128 = <0>;
	spk_volume = <25>;
	hp_volume = <25>;
	capture_volume = <26>;
	gpio_debug = <1>;
	codec_hp_det = <0>;
};

&dwc_control_usb {
	usb_uart {
		status = "disabled";
	};
};

&sdmmc {
        status = "okay";
	cd-gpios = <&gpio1 GPIO_C1 GPIO_ACTIVE_HIGH>;/*CD GPIO*/
};

