&cci {
	status = "okay";
};

&cci_i2c0 {
	camera_rear@3b {
		compatible = "ovti,ov5640";
		reg = <0x3b>;

		enable-gpios = <&tlmm 34 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&tlmm 35 GPIO_ACTIVE_LOW>;
