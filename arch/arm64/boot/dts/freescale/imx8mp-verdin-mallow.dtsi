/* Verdin HDMI_1 */
&hdmi_pvi {
	status = "okay";
};

&hdmi_tx {
	status = "okay";

	ports {
		port@1 {
			hdmi_tx_out: endpoint {
				remote-endpoint = <&native_hdmi_connector_in>;
			};
		};
	};
};

&hdmi_tx_phy {
	status = "okay";
