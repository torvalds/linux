		"CPLD_D[1]", "CPLD_int", "CPLD_reset", "",
		"", "CPLD_D[0]", "", "",
		"", "", "", "CPLD_D[2]",
		"CPLD_D[3]", "CPLD_D[4]", "CPLD_D[5]", "CPLD_D[6]",
		"CPLD_D[7]", "", "", "",
