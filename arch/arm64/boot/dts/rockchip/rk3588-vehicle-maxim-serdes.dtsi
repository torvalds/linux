&dp0 {
	split-mode;
	force-hpd;
	status = "okay";

	ports {
		port@1 {
			reg = <1>;

			dp0_out: endpoint {
				remote-endpoint = <&i2c3_max96745_in>;
			};
		};
	};
};

&dp0_in_vp0 {
	status = "okay";
};

&usbdp_phy0 {
	rockchip,dp-lane-mux = <0 1 2 3>;
	status = "okay";
};

&usbdp_phy0_dp {
	max-link-rate = <2700>;	/* Maximum link rate supported by PHY (in Mbps) */
	status = "okay";
};

&route_dp0 {
	connect = <&vp0_out_dp0>;
	status = "okay";
};

