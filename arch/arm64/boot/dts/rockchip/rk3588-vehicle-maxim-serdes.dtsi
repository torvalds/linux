&i2c2 {
	pinctrl-0 = <&i2c2m4_xfer>;
	clock-frequency = <400000>;
	status = "okay";

	max96755f@40 {
		compatible = "maxim,max96755f";
		reg = <0x40>;
		pinctrl-names = "default";
		pinctrl-0 = <&i2c2_serdes_pins>;
		#address-cells = <1>;
		#size-cells = <0>;

		pinctrl {
			compatible = "maxim,max96755f-pinctrl";

			i2c2_max96755f_panel_max96752f_pins: panel-max96752f-pins {
				bl-pwm {
					pins = "gpio18";
					function = "GPIO_TX_4";
				};
			};
		};

		bridge {
			compatible = "maxim,max96755f-bridge";
			lock-gpios = <&gpio1 RK_PA4 GPIO_ACTIVE_HIGH>;
			dsi,lanes = <4>;
			dsi,flags = <(MIPI_DSI_MODE_VIDEO | MIPI_DSI_MODE_VIDEO_SYNC_PULSE)>;

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@0 {
					reg = <0>;

					i2c2_max96755f_in: endpoint {
						remote-endpoint = <&dsi0_out>;
					};
				};

				port@1 {
					reg = <1>;

					i2c2_max96755f_out: endpoint {
						remote-endpoint = <&i2c2_max96755f_panel_in>;
					};
				};
			};
		};

		gmsl@0 {
			reg = <0>;
			clock-frequency = <400000>;
			#address-cells = <1>;
			#size-cells = <0>;

			panel@48 {
				compatible = "maxim,deserializer-panel";
				reg = <0x48>;
				backlight = <&i2c2_max96755f_backlight>;
				pinctrl-names = "max96752f";
				pinctrl-0 = <&i2c2_max96755f_panel_max96752f_pins>;

				port {
					i2c2_max96755f_panel_in: endpoint {
						remote-endpoint = <&i2c2_max96755f_out>;
					};
				};
			};
		};
	};
};

