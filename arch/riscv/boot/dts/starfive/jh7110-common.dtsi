	sc2235: sc2235@30 {
		compatible = "smartsens,sc2235";
		reg = <0x30>;
		clocks = <&clk_ext_camera>;
		clock-names = "xclk";

		port {
			/* Parallel bus endpoint */
			sc2235_to_parallel: endpoint {
				remote-endpoint = <&parallel_from_sc2235>;
				bus-type = <5>;      /* Parallel */
				bus-width = <8>;
				data-shift = <2>; /* lines 13:6 are used */
				hsync-active = <1>;
				vsync-active = <1>;
				pclk-sample = <1>;
			};
		};
	};

	tda998x@70 {
		compatible = "nxp,tda998x";
		reg = <0x70>;

		port {
