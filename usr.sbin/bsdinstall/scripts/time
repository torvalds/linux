# Select timezone
chroot $BSDINSTALL_CHROOT tzsetup

# Switch to target timezone
saved_TZ="$TZ"
TZ="${BSDINSTALL_CHROOT}/etc/localtime"
export TZ

# Set date
exec 3>&1
DATE=$(dialog --backtitle 'FreeBSD Installer' \
	--title 'Time & Date' \
	--ok-label 'Set Date' \
	--cancel-label 'Skip' \
	--defaultno \
	--date-format '%Y%m%d%H%M.%S' \
	--calendar '' 2 40 \
2>&1 1>&3) && date $DATE
exec 3>&-

# Set time
exec 3>&1
TIME=$(dialog --backtitle 'FreeBSD Installer' \
	--title 'Time & Date' \
	--ok-label 'Set Time' \
	--cancel-label 'Skip' \
	--defaultno \
	--time-format '%H%M.%S' \
	--timebox '' 2 40 \
2>&1 1>&3) && date $TIME
exec 3>&-

# Switch back
if [ -n "$saved_TZ" ]; then
	TZ="$saved_TZ"
else
	unset TZ
fi
unset saved_TZ
