> group::r-x
> other::r-x

$ rmdir ddd/ddd
$ rm ddd/xxx

$ setfacl -dm u::rwx,g::rx,o::rx,mask::rwx ddd
$ setfacl -dm g:42:rwx,u:43:r ddd
$ getfacl -dq ddd
> user::rwx
> user:43:r--
> group::r-x
> group:42:rwx
> mask::rwx
> other::r-x

$ touch ddd/xxx
$ getfacl -q ddd/xxx
> user::rw-
> user:43:r--
> group::r-x		# effective: r--
> group:42:rwx		# effective: r--
> mask::r--
> other::r--

$ mkdir ddd/ddd
$ getfacl -q ddd/ddd
> user::rwx
> user:43:r--
> group::r-x
> group:42:rwx		# effective: r-x
> mask::r-x
> other::r-x

$ rmdir ddd/ddd
$ rm ddd/xxx
$ rmdir ddd

# Test if we deal properly with fifos.
$ mkfifo fff
$ ls -l fff | cut -d' ' -f1
> prw-r--r--

$ setfacl -m u:42:r,g:43:w fff
$ getfacl fff
> # file: fff
> # owner: root
> # group: wheel
> user::rw-
> user:42:r--
> group::r--
> group:43:-w-
> mask::rw-
> other::r--

$ ls -l fff | cut -d' ' -f1
> prw-rw-r--+

$ setfacl -bn fff
$ getfacl fff
> # file: fff
> # owner: root
> # group: wheel
> user::rw-
> group::r--
> other::r--

$ ls -l fff | cut -d' ' -f1
> prw-r--r--

