#
# VIN sensor driver configuration
#

config VIN_SENSOR_OV5640
	bool "VIN SENSOR support OV5640"
	depends on VIDEO_STF_VIN
	select V4L2_FWNODE
	default n
	help
	  Say Y here if you want to have support for VIN sensor OV5640

