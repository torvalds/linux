choice
	prompt "OV5642 AUTO FOCUS FIRMWARE"
	depends on VIDEO_AMLOGIC_CAPTURE_OV5642
	default NO_AUTO_FUCOS
	
config NO_AUTO_FUCOS
	bool "NONE"
	---help---
	  no auto focus

config AD5820
	bool "AD5820"
	---help---
	  AD5820

config DW9714
