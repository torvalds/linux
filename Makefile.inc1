		${MAKE} -f Makefile.inc1 \
			DESTDIR=${WSTAGEDIR} \
			PKG_VERSION=${PKG_VERSION} create-world-packages

create-packages-kernel:	_pkgbootstrap _repodir .PHONY
	${_+_}@cd ${.CURDIR}; \
