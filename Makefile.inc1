		${MAKE} DESTDIR=${KSTAGEDIR} -DNO_ROOT stagekernel

stage-packages: .PHONY stage-packages-world stage-packages-kernel

_repodir: .PHONY
	@mkdir -p ${REPODIR}

create-packages-world:	_pkgbootstrap _repodir .PHONY
