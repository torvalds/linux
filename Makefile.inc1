		PKG_CMD=${PKG_CMD} PKG_VERSION=${PKG_VERSION} REPODIR=${REPODIR} \
		WSTAGEDIR=${WSTAGEDIR} \
		sh ${.CURDIR}/release/scripts/make-pkg-package.sh

real-packages:	stage-packages create-packages sign-packages .PHONY

stage-packages-world: .PHONY
	@mkdir -p ${WSTAGEDIR}
