    sbin/md5 \
    sbin/sysctl \
    usr.bin/addr2line \
    usr.bin/ar \
    usr.bin/awk \
    usr.bin/basename \
    usr.bin/bmake \
    usr.bin/bzip2 \
    usr.bin/cmp \
    usr.bin/diff \
    usr.bin/dirname \
    usr.bin/objcopy \
    usr.bin/env \
    usr.bin/fetch \
    usr.bin/find \
    usr.bin/grep \
