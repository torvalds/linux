# PROVIDE: kld
# REQUIRE: kldxref
# KEYWORD: nojail

. /etc/rc.subr

name="kld"
desc="Load kernel modules"

start_cmd="${name}_start"
stop_cmd=':'

kld_start()
{
	[ -n "$kld_list" ] || return

	local _kld

	echo 'Loading kernel modules:'
	for _kld in $kld_list ; do
		load_kld -e ${_kld}.ko $_kld
	done
}

load_rc_config $name
run_rc_command "$1"
